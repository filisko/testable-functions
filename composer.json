{
    "name": "filisko/testable-phpfunctions",
    "type": "library",
    "description": "Fake PHP functions for integration testing",
    "license": "MIT",
    "keywords": [
        "php",
        "native",
        "functions",
        "fake",
        "mock",
        "testing",
        "testable php functions",
        "unit"
    ],
    "homepage": "https://github.com/filisko/testable-phpfunctions",
    "support": {
        "issues": "https://github.com/filisko/testable-phpfunctions/issues"
    },
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8 || ^9",
        "friendsofphp/php-cs-fixer": "^3",
        "squizlabs/php_codesniffer": "^3",
        "phpstan/phpstan": "^1 || ^2"
    },
    "autoload": {
        "psr-4": {
            "Filisko\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Filisko\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "phpcs",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "coverage": "phpunit --coverage-text",
        "coverage-html": "phpunit --coverage-html=coverage"
    }
}
