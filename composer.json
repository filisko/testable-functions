{
    "name": "filisko/testable-phpfunctions",
    "type": "library",
    "description": "A library for testing PHP's built-in functions or language constructs.",
    "license": "MIT",
    "keywords": [
        "php",
        "native",
        "functions",
        "fake",
        "mock",
        "testing",
        "testable php functions",
        "unit"
    ],
    "homepage": "https://github.com/filisko/testable-phpfunctions",
    "support": {
        "issues": "https://github.com/filisko/testable-phpfunctions/issues"
    },
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8 || ^9",
        "friendsofphp/php-cs-fixer": "^3",
        "phpstan/phpstan": "^1 || ^2"
    },
    "autoload": {
        "psr-4": {
            "Filisko\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Filisko\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "coverage": "XDEBUG_MODE=coverage phpunit",
        "coverage-html": "XDEBUG_MODE=coverage phpunit --coverage-html=build/html"
    }
}
